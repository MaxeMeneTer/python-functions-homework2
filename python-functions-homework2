#1

from datetime import datetime

now = datetime.now()
print("Поточна дата і час:", now)

#2

day = int(input("Введіть день: "))
month = int(input("Введіть місяць: "))
year = int(input("Введіть рік: "))

try:
    date = datetime(year, month, day)
    print("Дата коректна")
except:
    print("Дата некоректна")

#3

day = int(input("Введіть день народження: "))
month = int(input("Введіть місяць народження: "))
year = int(input("Введіть рік народження: "))

today = datetime.today()

age = today.year - year

if today.month < month:
    age = age - 1
elif today.month == month:
    if today.day < day:
        age = age - 1

print("Ваш вік:", age)

#4

print("Перша дата:")
day1 = int(input("День: "))
month1 = int(input("Місяць: "))
year1 = int(input("Рік: "))

print("Друга дата:")
day2 = int(input("День: "))
month2 = int(input("Місяць: "))
year2 = int(input("Рік: "))

date1 = datetime(year1, month1, day1)
date2 = datetime(year2, month2, day2)

difference = date2 - date1

print("Різниця в днях:", difference.days)

#5

hour = datetime.now().hour

if hour >= 6 and hour < 12:
    print("Доброго ранку")
elif hour >= 12 and hour < 18:
    print("Доброго дня")
elif hour >= 18 and hour < 23:
    print("Доброго вечора")
else:
    print("Доброї ночі")

#6

day = int(input("Введіть день: "))
month = int(input("Введіть місяць: "))
year = int(input("Введіть рік: "))

date_object = datetime(year, month, day)

print("Ось об'єкт datetime:", date_object)

#7

day = int(input("Введіть день майбутньої дати: "))
month = int(input("Введіть місяць: "))
year = int(input("Введіть рік: "))

future_date = datetime(year, month, day)
today = datetime.today()

difference = future_date - today

print("Залишилось днів:", difference.days)
